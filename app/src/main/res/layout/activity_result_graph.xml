<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultGraph">

    <TextView
            android:text="cONSUMPTION OF ELECTRICITY GRAPH (WATTS)"
            android:layout_width="wrap_content"
            android:layout_height="111dp" android:id="@+id/textView2"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/graphView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp" android:gravity="center"
            tools:shadowColor="@android:color/holo_blue_bright" android:textColor="@android:color/holo_purple"
            tools:textSize="30sp"/>
    <com.jjoe64.graphview.GraphView
            android:layout_width="wrap_content"
            android:layout_height="298dp"
            android:id="@+id/graphView"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintVertical_bias="0.98"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginStart="100dp"
            app:layout_constraintHorizontal_bias="0.646"/>
    <TextView
            android:text="Highest Consumption "
            android:layout_width="410dp"
            android:layout_height="63dp"
            android:textColor="@color/black"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/graphView" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="1dp"
            android:layout_marginStart="100dp" app:layout_constraintHorizontal_bias="0.52"/>
            android:textSize="20dp"
            tools:layout_editor_absoluteX="6dp"
            android:id="@+id/textView"/>


</android.support.constraint.ConstraintLayout>
