<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HelpInstructions"
        android:background="@color/lightWhite">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteX="16dp"
                app:layout_constraintVertical_bias="1.0">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView
                    android:id="@+id/main_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:text="@string/help_title"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"/>

            <TextView
                    android:id="@+id/sub_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_description"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintTop_toBottomOf="@+id/main_heading"
                    android:paddingStart="7dp"
                    tools:paddingTop="20dp"/>
            <TextView
                    android:id="@+id/heading1"
                    android:text="@string/help_rules1"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/sub_heading"
                    tools:layout_marginTop="30dp"
                    tools:paddingTop="20dp"
                    android:paddingStart="20dp"/>

            <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:maxHeight="400dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/create_a_new_profile"
                    android:layout_gravity="center"
                    tools:paddingTop="20dp"
                    tools:layout_editor_absoluteY="29dp"
                    tools:layout_editor_absoluteX="20dp"/>

            <TextView

                    android:id="@+id/heading2"
                    android:text="@string/help_rules2"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/imageView1"
                    tools:layout_marginTop="30dp"
                    tools:paddingTop="20dp"
                    android:paddingStart="20dp"/>

            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:maxHeight="400dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/add_a_new_profile"
                    app:layout_constraintTop_toBottomOf="@+id/heading2"
                    android:layout_gravity="center"
                    tools:paddingTop="20dp"
                    tools:layout_editor_absoluteY="29dp"
                    tools:layout_editor_absoluteX="20dp"/>

            <TextView
                    android:id="@+id/heading3"
                    android:text="@string/help_rules3"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2"
                    tools:layout_marginTop="30dp"
                    tools:paddingTop="20dp"
                    android:paddingStart="20dp"/>

            <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:maxHeight="400dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/click_one_of_the_profile"
                    app:layout_constraintTop_toBottomOf="@+id/heading3"
                    android:layout_gravity="center"
                    tools:paddingTop="20dp"
                    tools:layout_editor_absoluteY="29dp"
                    tools:layout_editor_absoluteX="20dp"/>


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>

