<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewDeviceActivity"
        android:theme="@android:style/Theme.Holo.NoActionBar"
>

    <View
            android:id="@+id/back_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_margin="30dp"
            >
        <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"/>

        <TextView
                android:text="@string/create_new_profile"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/newProfileTitle"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@id/newProfileName"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="24dp"/>

        <Button
                android:text="@string/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonProfileAdd"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/buttonProfileCancel"
                app:layout_constraintTop_toBottomOf="@id/newProfileCost"
        />
        <Button
                android:text="@string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonProfileCancel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/buttonProfileAdd"
                app:layout_constraintTop_toBottomOf="@id/newProfileCost"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/newProfileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/newProfileTitle"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginTop="24dp">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_profile_name"

                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/newProfileDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/newProfileName">

            <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/description"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/newProfileCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/newProfileDescription">

            <android.support.design.widget.TextInputEditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/profile_cost"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>